{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2017"
        ],
        "baseUrl": ".",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "alwaysStrict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        "out",
        "next.config.js"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}
